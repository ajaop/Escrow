<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Escrow.SmallComponent
        </item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/registerBtn2</item>

    </style>


    <style name="onbTitle" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/onbTitle</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="onbDesc">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/onbDesc</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="onbLoginBtnText" parent="TextAppearance.AppCompat.Button">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineHeight">25sp</item>
    </style>


    <style name="ShapeAppearance.Escrow.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <!-- Login and register Button 1 !-->
    <style name="onbLoginBtn1" parent="Widget.MaterialComponents.Button">
        <!-- <item name="android:backgroundTint">@color/loginBtn</item> -->
        <item name="android:textAppearance">@style/onbLoginBtnText</item>
        <!--  <item name="android:textColor">@color/onbTitle</item> -->
    </style>

    <style name="onbRegisterBtn1" parent="Widget.MaterialComponents.Button">
        <!--  <item name="android:backgroundTint">@color/onbTitle</item> -->
        <item name="android:textAppearance">@style/onbLoginBtnText</item>
        <!-- <item name="android:textColor">@color/registerBtnText</item> -->
    </style>


    <style name="loginBtn" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/registerBtn2</item>
        <item name="android:textAppearance">@style/onbLoginBtnText</item>
        <item name="android:textColor">@color/registerBtnText</item>
    </style>


    <!-- Login Activity -->
    <style name="loginTitle" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/onbTitle</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="emailTextView" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/onbTitle</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="forgotPassTextView" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/registerBtn2</item>
        <item name="android:textStyle">normal</item>
    </style>


    <style name="textHelper" parent="">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="lineHeight">20sp</item>
    </style>

    <style name="label" parent="">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="lineHeight">20sp</item>
        <item name="android:textColor">#B3222F49</item>
    </style>

    <style name="ShapeAppearanceOverlay.Escrow.TextInput" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- error display -->
    <style name="errorTextView" parent="">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">#EB5757</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Dashboard styles -->
    <style name="HelloText" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/helloTextColor</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- card view -->
    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardBackgroundColor">#6B42DD</item>
    </style>

    <style name="in_escrow" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/in_escrowColour</item>
        <item name="android:textStyle">normal</item>

    </style>


    <style name="escrowBalanceStyle" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/escrowBalanceColor</item>
        <item name="android:textStyle">normal</item>
    </style>


    <style name="escrowBalanceCreditStyle" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/escrowBalanceColor</item>
        <item name="android:textStyle">normal</item>

    </style>

    <style name="view_transactionStyle" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/view_transactionColour</item>
        <item name="android:textStyle">normal</item>
    </style>




</resources>